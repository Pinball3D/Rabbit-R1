<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/selector_ff4d00_00000000_r10"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="36dp">
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="24sp"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:id="@+id/tv_label"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:maxLines="1"
        android:singleLine="true"
        android:includeFontPadding="false"
        android:layout_weight="1"
        android:fontFamily="@font/power_grotesk_regular"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        android:textFontWeight="400"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/orange_ff4d00"
        android:gravity="center"
        android:id="@+id/tv_hold"
        android:background="@drawable/shape_ffffff_r4"
        android:visibility="gone"
        android:layout_width="36.5dp"
        android:layout_height="16.5dp"
        android:text="@string/settings_item_hold"
        android:includeFontPadding="false"
        android:fontFamily="@font/power_grotesk_regular"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:letterSpacing="0.04"
        android:textFontWeight="700"/>
</androidx.appcompat.widget.LinearLayoutCompat>
